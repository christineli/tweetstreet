extends layout

block content
	section#content
		div
			#c-slide.carousel.carousel-fade.slide.auto.bg-white.dker(style='height: 530px;')
				ol.carousel-indicators
					li.active(data-target='#c-slide', data-slide-to='0')
					li(data-target='#c-slide', data-slide-to='1')
					li(data-target='#c-slide', data-slide-to='2')
				.carousel-inner
					.item.active.row
						.col-xs-5.text-right
							h1
								br
								br
								| What is TweetStreet?
							img.animated.fadeInRightBig(src='images/buysell.jpg')
						.col-sm-6
							h2.animated.fadeInLeftBig
								strong.class
									br
									br
									br
									br
									br
									| TweetStreet
								span.font-thin	is a game that lets you buy and sell hashtags!
					.item.row
						.col-xs-5.text-right
							h1
								br
								br
								| How do I get started?
							img.animated.fadeInRightBig(src='images/hashtag.jpg')
						.col-sm-6
							h2.animated.fadeInLeftBig
								strong.class
									br
									br
									br
									br
									br
									| Create 
								span.font-thin
									| an account,
									br
									br
								strong.class Search 
								span.font-thin
									| for hashtags you think will rise in popularity,
									br
									br
									strong.class Buy 
									span.font-thin
										| shares!
										br
										br
										br
										br
					.item.row
						.col-xs-5.text-right
							h1
								br
								br
								| Then what?
							img.animated.fadeInRightBig(src='images/sell.png')
						.col-sm-6
							h2.animated.fadeInLeftBig
								strong.class
									br
									br
									br
									br
									br
									br
									| Sell 
								span.font-thin
									| your hashtags when they've risen in price!
									br
									br
									br
									br
							p.hidden-xs.animated.fadeInUpBig
								a.btn.btn-lg.btn-info.btn-rounded.btn-s-lg(href='/about') learn more
				a.left.carousel-control(href='#c-slide', data-slide='prev')
					i.icon-angle-left
				a.right.carousel-control(href='#c-slide', data-slide='next')
					i.icon-angle-right
